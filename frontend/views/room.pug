extends layout

block content
    div(class="container")
        div(class="row" id="settings" style="margin-top: 100px")
            each seat, i in seatMap
                div(class="col" style="margin-top: 20px")
                    div(class="card" style="width: 10rem;")
                        - let img = seat? "background.png":"empty.png"
                        img(class="card-img-top" src="/images/" + img alt="Card image cap")
                        div(class="card-body")
                            h5(class="card-title")= i + "号玩家"
                            p(class="card-text")


    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")